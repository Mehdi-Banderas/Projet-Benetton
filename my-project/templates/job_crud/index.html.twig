{% extends 'home/squelette.html.twig' %}

{% block title %}Job index{% endblock %}

{% block main %}
    <h1>Vos annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Domaine</th>
                <th>Intitul√© du poste</th>
                <th>Description</th>
                <th>Date de publication</th>
                <th>Date de prise de fonction</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.code }}</td>
                <td>{{ job.name }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.datePublished ? job.datePublished|date('Y-m-d') : '' }}</td>
                <td>{{ job.jobStartDate ? job.jobStartDate|date('Y-m-d') : '' }}</td>
                <td><span class="postuler-js"><a href="{{path('candidat_postuler',{'id': job.id})}}">{{ job.postulers | length }}</a></span> <p>profils</p></td>
                <td>
                    <a href="{{ path('job_crud_show', {'id': job.id}) }}"><i class="far fa-eye"></i></a> <span>/</span>
                    <a href="{{ path('job_crud_edit', {'id': job.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
            <tr>
            <a href="{{ path('job_crud_new') }}">Nouveau poste <i class="fas fa-plus"></i></a>
            </tr>
        </tbody>
    </table>

    
{% endblock %}


